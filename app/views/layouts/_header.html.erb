<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container">
      <%= link_to "MyArts", root_path, class: 'nav-link text-light' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to items_customers_path, class: 'nav-link text-light' do %>
                <i class="fas fa-home"></i>会員一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_items_path, class: 'nav-link text-light' do %>
                <i class="fas fa-home"></i>作品一覧
              <% end %>
            </li>
          <% elsif customer_signed_in? %>
            <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-light' do %>
                <i class="fas fa-home"></i>作品一覧
              <% end %>
            </li>
              <%= link_to new_item_path, class: 'nav-link text-light' do %>
                <i class="fas fa-users"></i>作品投稿
              <% end %>
            <li class="nav-item">
              <%= link_to customer_path(current_customer), class: 'nav-link text-light' do %>
                <i class="fas fa-book-open"></i>マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
                <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-light' do %>
                <i class="fas fa-home"></i>作品一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link text-light' do %>
                <i class="fas fa-link"></i>アバウト
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_registration_path, class: 'nav-link text-light' do %>
                <i class="fas fa-user-plus"></i>会員登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_session_path, class: 'nav-link text-light' do %>
                <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>