<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="row d-flex justify-content-center">
        <h3>会員情報編集</h3>
      </div>
      <%= form_with model:@customer, url: admin_customer_path(@customer), method: :patch do |f| %>
        <%= render 'layouts/errors', obj: @customer %>
        <table class="table">
          <tbody>
            <tr>
              <div class="row d-flex justify-content-center mt-5 mb-5">
                <%= image_tag @customer.get_profile_image(100, 100) %>
              </div>
            </tr>
            <tr>
              <td><h6>ニックネーム</h6></td>
              <td><h6><%= @customer.name %></h6></td>
            </tr>
            <tr>
              <td><h6>自己紹介</h6></td>
              <td><h6><%= @customer.introduction %></h6></td>
            </tr>
          </tbody>
        </table>
        <div class="form-group">
          <b><%= f.label :会員ステータス, class: "mr-5" %></b>
          <%= f.radio_button :is_deleted, Customer.is_deleteds.key(true) %>
          <%= f.label :is_deleted, Customer.is_deleteds_i18n[:_invalid], class: "mr-5" %>
          <%= f.radio_button :is_deleted, Customer.is_deleteds.key(false) %>
          <%= f.label :is_deleted, Customer.is_deleteds_i18n[:_valid] %>
        </div>
        <div class="form-group d-flex justify-content-center">
          <%= f.submit '変更を保存する', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
