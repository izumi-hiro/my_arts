<div class="container">
  <div class="row">
    <h3 class="mb-5">会員一覧</h3>
  </div>
  <div class="row mx-5 px-5">
    <table class="table border-bottom">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer), class:"text-dark" do %>
                <%= image_tag customer.get_profile_image(70, 70) %>
                <%= customer.name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted_i18n == "有効" %>
                <b class="text-success"><%= customer.is_deleted_i18n %></b>
              <% else %>
                <b class="text-danger"><%= customer.is_deleted_i18n %></b>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @customers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
