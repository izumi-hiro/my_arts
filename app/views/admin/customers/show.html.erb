<div class="container">
  <div class="row mb-4">
    <h3>会員詳細</h3>
  </div>
  <div class="row mb-5">
    <div class="col-3">
      <div class="mb-3">
        <% if @customer.is_deleted_i18n == "有効" %>
          <b class="text-success"><%= @customer.is_deleted_i18n %></b>
        <% else %>
          <b class="text-danger"><%= @customer.is_deleted_i18n %></b>
        <% end %>
      </div>
      <%= image_tag @customer.get_profile_image(100, 100) %>
      <b><%= @customer.name %></b>
    </div>
    <div class="col-3 d-flex align-items-center">
      <%= @customer.introduction %>
    </div>
    <div class="col-2 d-flex align-items-center">
      <%= link_to edit_admin_customer_path(@customer), class: "btn btn-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h3>投稿作品一覧</h3>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>作品ID</th>
          <th></th>
          <th>タイトル</th>
          <th>作品ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= attachment_image_tag item.item_images.first, :image, size: "140x110", format: "jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= item.title %>
              <% end %>
            </td>
            <td>
              <%= render 'public/items/status', item: item %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

