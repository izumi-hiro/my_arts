<h1>admin/items/index</h1>
<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>作品ID</th>
          <th>タイトル</th>
          <th>作品ステータス</th>
          <th>作者</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.title %></td>
            <td>
              <% if item.is_active_i18n == "公開中" %>
                <b class="text-success"><%= item.is_active_i18n %></b>
              <% else %>
                <b class="text-danger"><%= item.is_active_i18n %></b>
              <% end %>
            </td>
            <td><%= item.customer.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= render 'admin/items/index', items: @items %>