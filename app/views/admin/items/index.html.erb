<div class="container">
  <div class="row">
    <h3 class="mb-5">作品一覧</h3>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>作品ID</th>
          <th></th>
          <th>タイトル</th>
          <th>作品ステータス</th>
          <th>作者</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= attachment_image_tag item.item_images.first, :image, size: "140x110", format: "jpg" %>
              <% end %>
            </td>
            <td>
              <%= link_to admin_item_path(item) do %>
                <%= item.title %>
              <% end %>
            </td>
            <td>
              <%= render 'public/items/status', item: item %>
            </td>
            <td>
              <%= link_to admin_customer_path(item.customer) do %>
                <%= image_tag item.customer.get_profile_image(60, 60) %>
                <%= item.customer.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>