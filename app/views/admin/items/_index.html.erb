<div class="row">
  <% items.each do |item| %>
    <div class="col-lg-3 col-md-6">
      <%= link_to admin_item_path(item) do %>
        <div class="card">
          <div class="card-img-top text-center">
            <%= attachment_image_tag item.item_images.first, :image, size: "260x180", format: "jpg" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>