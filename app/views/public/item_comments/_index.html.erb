<table class="table">
  <tbody>
    <% item.item_comments.each do |item_comment| %>
      <tr id="comment-<%=item_comment.id%>">
        <td>
          <%= link_to customer_path(item_comment.customer) do %>
            <%= image_tag item_comment.customer.get_profile_image(60, 60) %><br>
            <%= item_comment.customer.name %>
          <% end %>
        </td>
        <td><%= item_comment.comment %></td>
        <td><%= item_comment.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <% if item_comment.customer == current_customer %>
            <%= link_to "Destroy", item_item_comment_path(item, item_comment), method: :delete, remote: true, data: {confirm: '本当に消しますか？' }, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>