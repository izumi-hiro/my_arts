<table class="table">
  <tbody>
    <% item.item_comments.reverse.each do |item_comment| %>
      <tr id="comment_<%=item_comment.id%>">
        <td class="col-2">
          <%= link_to customer_path(item_comment.customer) do %>
            <%= image_tag item_comment.customer.get_profile_image(60, 60) %><br>
            <%= item_comment.customer.name %>
          <% end %>
        </td>
        <td class="col-8">
          <p><%= item_comment.comment %></p>
          <%= item_comment.created_at.strftime('%Y/%m/%d') %>
        </td>
        <td align="center">
          <div>
            <% if item_comment.customer == current_customer %>
              <%= link_to "削除", item_item_comment_path(item, item_comment), method: :delete, remote: true, data: {confirm: '本当に消しますか？' }, class: "btn btn-danger pull-right" %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
