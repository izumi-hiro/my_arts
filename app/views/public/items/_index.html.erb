<div class="row mt-4">
  <% items.each do |item| %>
    <div class="col-lg-3 col-md-6 mb-4">
      <%= link_to(item) do %>
        <div class="card border-0">
          <div class="card-img-top text-center">
            <%= attachment_image_tag item.item_images.first, :image, format: "jpg", class: "index-img" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>