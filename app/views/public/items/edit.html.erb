<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>作品情報編集</h3>
      <%= render 'layouts/errors', obj: @item %>
      <%= form_with model: @item, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :"作品画像", class: "col-3" %>
          <%= f.attachment_field :item_images_images, multiple: true %>
        </div>
        <div class="form-group row">
          <%= f.label :"タイトル", class: "col-3" %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group row">
          <%= f.label :"説明文", class: "col-3" %>
          <%= f.text_area :body, size: "40x4" %>
        </div>
        <div class="form-group row">
          <%= f.label :"タグ", class: "col-3" %>
          <%= f.text_field :name, size: "30x1" %>
        </div>
        <div class="form-group">
          <%= f.label :公開ステータス, class: "mr-5" %>
          <%= f.radio_button :is_active, Item.is_actives.key(true) %>
          <%= f.label :is_active, Item.is_actives_i18n[:display], class: "mr-5" %>
          <%= f.radio_button :is_active, Item.is_actives.key(false) %>
          <%= f.label :is_active, Item.is_actives_i18n[:closed] %>
        </div>
        <div class="d-flex justify-content-center mb-5">
          <%= link_to '削除', item_path(@item), method: :delete, data: {confirm: '本当に消しますか？' }, class: "btn btn-danger col-2" %>
          <%= f.submit "変更を保存", class: "btn btn-success ml-5"%>
        </div>
      <% end %>
    </div>
  </div>
</div>