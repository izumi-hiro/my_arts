<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>作品情報編集</h3>
      <%= form_with model: @item, local: true do |f| %>
        <div class="form-group row">
          <%= f.label :"作品画像" %>
          <%= f.attachment_field :item_images_images, multiple: true %>
        </div>
        <div class="form-group row">
          <%= f.label :"タイトル" %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group row">
          <%= f.label :"説明文" %>
          <%= f.text_area :body, size: "50x3" %>
        </div>
        <div class="form-group">
          <%= f.label :"タグ" %>
          <%= f.text_field :name, size: "50x1" %>
        </div>
        <div class="d-flex justify-content-center mb-5">
          <%= link_to 'Destroy', item_path(@item), method: :delete, data: {confirm: '本当に消しますか？' }, class: "btn btn-danger col-2" %>
          <%= f.submit "変更を保存", class: "btn btn-success ml-5"%>
        </div>
      <% end %>
    </div>
  </div>
</div>