<h1>public/customers/show</h1>

<%= image_tag @customer.get_profile_image(100, 100) %>

<%= @customer.name %>

<%= @customer.introduction %>

<% if current_customer != @customer %>
  <%= render "public/relationships/btn", customer: @customer %>
<% elsif @customer.name == "guestuser" %>
  <p>会員情報の編集はできません</p>
<% else %>
  <%= link_to edit_customer_path(@customer), class: "btn btn-outline-secondary btn-block edit_customer_#{@customer.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<% end %>

<h6>フォロー</h6>
<%= link_to @customer.followings.count, customer_followings_path(@customer) %>

<h6>フォロワー</h6>
<%= link_to @customer.followers.count, customer_followers_path(@customer) %>

<div class="row">
  <h1>作品一覧</h1>
</div>
<div class="row">
  <table class="table">
    <% @items.each do |item| %>
      <tr><td><%= item.title %></td></tr>
      <tr><td><%= item.body %></td></tr>
      <tr>
        <td>
          <% item.item_images.each do |item_image| %>
            <%= attachment_image_tag item_image, :image, size: "130x100", format: "jpg" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

