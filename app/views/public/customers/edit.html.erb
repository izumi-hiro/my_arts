<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="row d-flex justify-content-center">
        <h3>会員情報編集</h3>
      </div>
      <%= render 'layouts/errors', obj: @customer %>
      <div class="d-flex justify-content-center">
        <%= form_with model:@customer, local:true do |f| %>
          <div class="form-group row mt-5">
            <%= f.label :ニックネーム %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group row">
            <%= f.label :プロフィール画像 %>
            <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
          </div>
          <div class="form-group row">
            <%= f.label :自己紹介 %>
            <%= f.text_area :introduction, size: "50x4",class: "form-control introduction" %>
          </div>
          <div class="form-group row d-flex justify-content-center mt-5">
            <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
            <%= f.submit '変更を保存する', class: "btn btn-success ml-5" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
