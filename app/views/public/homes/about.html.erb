    </div>
  </div>
  <div class="row d-flex justify-content-center mt-4">
    <%= link_to new_customer_registration_path, class: "mb-4" do %>
      <h4 class="about-sign_in">会員登録はこちら</h4>
    <% end %>
  </div>
</div>

